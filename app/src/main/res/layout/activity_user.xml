<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_user">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:id="@+id/profImage"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/download1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profImage"
        android:orientation="vertical">

            <TextView
            android:layout_width="44dp"
            android:layout_height="18dp"
            android:id="@+id/nameidicate"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="Name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameProfile"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneidicate"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="Phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PhoneProfile"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryidicate"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="Country"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CountryProfile"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textStyle="bold"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>